<h3 class='section-title'>Agregar libro📚</h3>
<form action='/admin' method='POST'>
	<div class='form-group'>
		<input
			type='text'
			class='form-input form-input-title'
			name='title'
			placeholder='Titulo'
			value='{{username}}'
		/>
		<input type='text' class='form-input' name='author' placeholder='Autor' />
	</div>
	<div class='form-group'>
		<input
			type='text'
			class='form-input'
			name='editorial'
			placeholder='Editorial'
		/>
		<input
			type='number'
			class='form-input form-input-half'
			name='shelf'
			min='0'
			placeholder='Estante'
		/>
		<input
			type='number'
			class='form-input form-input-half'
			name='quantity'
			min='0'
			placeholder='Canti.'
		/>
	</div>
	<div class='form-group'>
		{{! <input type="url" name="" id=""> }}
		<input
			type='text'
			class='form-input form-input-add-info'
			name='imageUrl'
			placeholder='imgUrl ej: https://google.com/img.jpg'
		/>

		<input
			type='number'
			min='0'
			name='stars'
			class='form-input form-input-stars'
			placeholder='⭐'
		/>

	</div>
	<div class='form-group'>
		<input type='submit' class='form-input form-input-submit' value='Agregar' />
	</div>
</form>
{{! ------------------------------------------------------------------------- }}
<h3 class='section-title'>Editar, Eliminar</h3>
<form class='shelf-form' action='/admin' method='GET'>
	<label for='shelf'>estante</label>
	<select id='shelf' name='shelf'>
		<option value='8'>8</option>
		<option value='9'>9</option>
		<option value='10'>10</option>
		<option value='11'>11</option>
	</select>
	<button>Buscar</button>
</form>

<table border='1px' class='crud-table'>
	<thead>
		<tr>
			<th>-Acciones-</th>
			<th>Titulo</th>
			<th>Autor</th>
			<th>Editorial</th>
			<th>Estante</th>
			<th>Cantidad</th>
			<th>🌟</th>
		</tr>
	</thead>
	{{#each shelfsArrayAdmin}}
		<tbody class='search-results-tbody'>
			<tr>
				<td class='template-artist'>
					<button data-id='{{this._id}}'>Editar</button><button
						data-id='{{this._id}}'
					>Eliminar</button>
				</td>
				<td class='template-name'> {{this.title}} </td>
				<td class='template-artist'> {{this.author}} </td>
				<td class='template-artist'> {{this.editorial}} </td>
				<td class='template-artist'> {{this.shelf}} </td>
				<td class='template-artist'> {{this.quantity}} </td>
				<td class='template-artist'> {{this.stars}} </td>
			</tr>
		</tbody>
	{{/each}}
</table>
