<h3 class='section-title'>Agregar libro📚</h3>
<form action='/admin' class='admin-form' method='POST'>
	<div class='form-group'>
		<input
			type='text'
			class='form-input form-input-title'
			name='title'
			placeholder='Titulo'
			value='{{username}}'
		/>
		<input type='text' class='form-input' name='author' placeholder='Autor' />
	</div>
	<div class='form-group'>
		<input
			type='text'
			class='form-input'
			name='editorial'
			placeholder='Editorial'
		/>
		<input
			type='number'
			class='form-input form-input-half'
			name='shelf'
			min='0'
			placeholder='Estante'
		/>
		<input
			type='number'
			class='form-input form-input-half'
			name='quantity'
			min='0'
			placeholder='Canti.'
		/>
	</div>
	<div class='form-group'>
		{{! <input type="url" name="" id=""> }}
		<input
			type='text'
			class='form-input form-input-add-info'
			name='imageUrl'
			placeholder='imgUrl ej: https://google.com/img.jpg'
		/>

		<input
			type='number'
			min='0'
			name='stars'
			class='form-input form-input-stars'
			placeholder='⭐'
		/>
	</div>
	<div class='form-group'>
		<input type='submit' class='form-input form-input-submit' value='Agregar' />
		<input type='hidden' name='id' />
	</div>
</form>
{{! ------------------------------------------------------------------------- }}
<h3 class='section-title'>Editar, Eliminar</h3>
<form class='shelf-form' action='/admin' method='GET'>
	<label for='shelf'>estante</label>
	<select id='shelf' name='shelf'>
		<option value='8'>8</option>
		<option value='9'>9</option>
		<option value='10'>10</option>
		<option value='11'>11</option>
	</select>
	<button>Buscar</button>
</form>

<table border='1px' class='crud-table'>
	<thead>
		<tr>
			<th>-Acciones-</th>
			<th>Titulo</th>
			<th>Autor</th>
			<th>Editorial</th>
			<th>Estante</th>
			<th>Cantidad</th>
			<th>🌟</th>
		</tr>
	</thead>
	{{#each shelfsArrayAdmin}}
		<tbody class='search-results-tbody'>
			<tr>
				<td>
					<button
						class='book-edit-btn'
						data-title='{{this.title}}'
						data-author='{{this.author}}'
						data-editorial='{{this.editorial}}'
						data-shelf='{{this.shelf}}'
						data-quantity='{{this.shelf}}'
						data-imageUrl='{{this.imageUrl}}'
						data-stars='{{this.stars}}'
						data-id='{{this._id}}'
					>Editar</button><button
						class='book-delete-btn'
						data-id='{{this._id}}'
					>Eliminar</button>
				</td>
				<td> {{this.title}} </td>
				<td> {{this.author}} </td>
				<td> {{this.editorial}} </td>
				<td> {{this.shelf}} </td>
				<td> {{this.quantity}} </td>
				<td> {{this.stars}} </td>
			</tr>
		</tbody>
	{{/each}}
</table>
<hr />
<p>sos el admin. un gran poder conlleva una gran responsabilidad</p>

<script>
	const d=document; const $form=document.querySelector('.admin-form'); const
	$title=document.querySelector('.section-title');
	d.addEventListener('click',(e)=>{ if(e.target.matches('.book-edit-btn')){
	$title.textContent = 'Editar Libro'; $form.title.value
	=e.target.dataset.title; $form.author.value = e.target.dataset.author;
	$form.editorial.value = e.target.dataset.editorial; $form.shelf.value =
	e.target.dataset.shelf; $form.quantity.value = e.target.dataset.quantity;
	$form.imageUrl.value = e.target.dataset.imageUrl; $form.stars.value =
	e.target.dataset.stars; $form.id.value = e.target.dataset.id; } })
</script>