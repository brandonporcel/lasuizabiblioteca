<div class='settings-container'>
	<h4 class='settings-title'>Configuraciones</h4>
	<hr />

	<form action='/settings/{{user._id}}' method='POST' class='settings-form'>
		<div class='form-group'>
			<label for='username'>Nombre</label>
			<input
				type='text'
				id='username'
				name='username'
				class='form-input form-input-half'
				required='true'
				placeholder='{{user.username}}'
			/>
		</div>
		<div class='form-group'>
			<label for='color-text-input'>Color</label>
			<div class='color-input-container'>
				<input
					id='color-text-input'
					type='text'
					name='color'
					class='form-input'
					required='true'
					placeholder='{{user.color}}'
				/>
				<input type='color' id='color-input' class='form-input' />
			</div>
		</div>
		<input type='submit' class='form-input form-input-submit' value='Guardar' />
	</form>

	<button class='delete-account-btn'>Eliminar cuenta</button>
</div>

<script>
	const $colorTextInput=document.getElementById('color-text-input');
	document.getElementById('color-input').addEventListener('change',function(){
	$colorTextInput.value=this.value })
